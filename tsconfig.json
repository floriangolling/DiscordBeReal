{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./src",
      "strictNullChecks": true,
      "strictPropertyInitialization": false,
      "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  